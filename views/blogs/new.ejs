<%- include("../partials/header") %>
    
<body style="background-color:#f5f5f5;">
<div class="container">
    <div class="card" style="margin-top: 40px; width: 900px;margin-left: 100px;margin-bottom: 30px;">
            
        <div class="card-body">
        <h1 style="text-align: center;font-weight: bolder;font-family:Cambria">Create Your Story</h1>
        <p style="font-size: 14px;">Fields marked as * are required</p>
        <div>
            <form action="/blogs" method="POST" enctype="multipart/form-data">
                <label>Name*</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="name">
                </div>
                
               
                  <div style="padding-top: 10px;" class="form-group">
                  <label>Image*</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label>Snippet*</label>
                    <textarea rows="09" class="form-control"  type="text" name="blog[description]" placeholder="description"></textarea>
                   
                </div>
                <div class="form-group">
                    <button class="btn-block" style="background-color:rgba(223, 37, 37, 0.918); height: 40px;border: medium;color:white">Add</button>
                </div>
            </form>
            <a style="color:blue" href="/blogs">Go Back</a>
        </div>
    </div>
</div>
</div>
</div>


<%- include("../partials/footer") %>
