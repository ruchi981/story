<%- include("../partials/header") %>
    
<body style="background-color:#f5f5f5;">
<div class="container">
    <div class="card indexCards shadow border-0" style="margin-top: 40px; width: 850px;margin-left: 130px;margin-bottom: 30px;">
            
        <div class="card-body">
        <h1 style="text-align: center;font-weight: bolder;font-family:Cambria">Add Your Spot</h1>
        <p style="font-size: 14px;">Fields marked as * are required</p>
        <div>
            <form action="/blogs" method="POST" enctype="multipart/form-data">
                <label>Name*</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="name">
                </div>
                
               
                  <div style="padding-top: 10px;" class="form-group">
                  <label>Image*</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label>Snippet*</label>
                    <textarea rows="04" class="form-control"  type="text" name="blog[description]" placeholder="description"></textarea>
                   
                </div>
                <div class="form-group">
                    <label>Location*</label>
                    <input class="form-control" type="text" name="blog[location]" placeholder="location">
                    
                   
                </div>
                <div class="form-group">
                    <label>Peak Season*</label>
                    <input class="form-control" type="text" name="blog[peak]" placeholder="season">
                    
                   
                </div>
                <div class="form-group">
                    <label>Tourist Attraction*</label>
                    <input class="form-control" type="text" name="blog[attraction]" placeholder="tourist attraction">
                    
                   
                </div>
                <div class="form-group">
                    <label>Contact Number*</label>
                    <input class="form-control" type="number" name="blog[contact]" placeholder="phone number">
                    
                   
                </div>
                <div class="form-group">
                    <button class="btn-block" style="background-color:black; height: 40px;border: medium;color:goldenrod;font-weight: bold;">Add</button>
                </div>
            </form>
            <a style="color:rgb(8, 149, 204)" href="/blogs">Go Back</a>
        </div>
    </div>
</div>
</div>
</div>


<%- include("../partials/footer") %>
