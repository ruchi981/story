<%- include("partials/header") %>


<body style="background-color:#f5f5f5;">
    

<div class="container" >
    <div style="width:37% ;margin: 0 auto;">
        <div class="card indexCards shadow border-0" style="margin-top: 40px;">
            
            <div class="card-body">
                <h2 style="text-align: center;padding-top: 3px; padding-bottom: 14px;font-weight: bolder;font-family:Cambria">Sign up!</h2>
                <p style="font-size: 14px;">Fields marked as * are required</p>
<form action="/register" method="POST">

    <div class="form-group">
        <label>Username*</label>
        <input class="form-control" type="text" placeholder="enter username" name="username">
        </div>
        <div class="form-group">
            <label>Avatar*</label>
            <input class="form-control" type="text" placeholder="avatar url" name="avatar">
            </div>
        <div class="form-group">
            <label>Firstname</label>
                <input class="form-control" type="text" placeholder="enter firstName" name="firstName">
                </div>
                <div class="form-group">
                    <label>Lastname</label>
                    <input class="form-control" type="text" placeholder="enter lastName" name="lastName">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="email" placeholder="enter email" name="email">
                        </div>
        <div class="form-group">
            <label>Password</label>
    <input class="form-control" type="password" placeholder="enter password" name="password">
</div>
    <button class="btn-block" style="background-color:black; height: 40px;border: medium;color:goldenrod;font-weight: bold;">Sign Up</button>
</form>
</div>
</div>

</body>

<%- include("partials/footer") %>