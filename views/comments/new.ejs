<%- include("../partials/header") %>
    
<body style="background-color:#f5f5f5;">
<div class="container">
    <div class="card" style="margin-top: 40px; width: 700px; height:300px;margin-left: 220px;margin-bottom: 30px;">
            
        <div class="card-body">
        <h3 style="text-align: center;font-weight: bolder;padding-bottom: 10px;font-family:Cambria">Add Comment to <i>"<%= blog.title %>"</i></h3>
        <p style="font-size: 14px;">Fields marked as * are required</p>
        <div>
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <label>Comment*</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="enter text" >
                </div>
                
               
                <div class="form-group">
                    <button class="btn-block" style="background-color:black; height: 40px;border: medium;color:goldenrod;font-weight: bold;">Add Comment</button>
                </div>
            </form>
            <a style="color:blue" href="/blogs">Go Back</a>
        </div>
    </div>
</div>
</div>
</div>
